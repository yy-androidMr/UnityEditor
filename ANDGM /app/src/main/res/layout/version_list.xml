<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="刷新数据" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/now_server"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="现在的服务器:" />

                <TextView
                    android:id="@+id/new_server"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="要替换的服务器:" />
            </LinearLayout>

            <Button
                android:id="@+id/replaceLocalFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="开始替换" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/findServerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="选择服务器列表" />

            <EditText
                android:id="@+id/currentServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:hint="输入要替换的ip"
                android:paddingBottom="10dp" />

            <Button
                android:id="@+id/beginReplace2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="开始替换" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>